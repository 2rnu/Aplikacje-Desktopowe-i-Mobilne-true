<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rgbColorPaletteBoxMauiApp.MainPage"
             xmlns:viewModel="clr-namespace:rgbColorPaletteBoxMauiApp.ViewModels">

    <ScrollView>
        <VerticalStackLayout>
            <BoxView HeightRequest="100" 
                     CornerRadius="10"
                     Color="{Binding PreviewColor}" />

            <Label Text="Dobierz kolor suwakami i pobierz:"
                   HorizontalOptions="Center" />

            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="R" VerticalOptions="Center" />
                <Slider Minimum="0" Maximum="255" Value="{Binding Red}" />
                <Label Text="{Binding Red}" VerticalOptions="Center"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="G" VerticalOptions="Center" />
                <Slider Minimum="0" Maximum="255" Value="{Binding Green}" />
                <Label Text="{Binding Green}" VerticalOptions="Center"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="B" VerticalOptions="Center" />
                <Slider Minimum="0" Maximum="255" Value="{Binding Blue}" />
                <Label Text="{Binding Blue}" VerticalOptions="Center"/>
            </StackLayout>

            <Button Text="Pobierz"
                    Clicked="OnGetColorClicked"
                    BackgroundColor="DarkGray"
                    TextColor="White"/>

            <Entry IsReadOnly="True"
                   HorizontalOptions="Center"
                   Text="{Binding RgbText}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
