<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rgbColorPaletteBoxMauiApp.MainPage"
             xmlns:viewModel="clr-namespace:rgbColorPaletteBoxMauiApp.ViewModels">

    <ScrollView>
        <VerticalStackLayout>
            <BoxView HeightRequest="100" 
                     CornerRadius="10"
                     Color="{Binding PreviewColor}" />

            <Label Text="Dobierz kolor suwakami i pobierz:"
                   HorizontalOptions="Center" />
        
            <StackLayout>
                <Label Text="R" 
                   Grid.Row="0" 
                   Grid.Column="0" 
                   VerticalOptions="Center"/>
                <Slider Grid.Row="0" 
                    Grid.Column="1"
                    Minimum="0" 
                    Maximum="255"
                    Value="{Binding Red}"/>
                <Label Text="{Binding Red}" 
                   Grid.Row="0" 
                   Grid.Column="2" 
                   VerticalOptions="Center"/>
            <StackLayout/>

            <StackLayout>
                <Label Text="G" 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   VerticalOptions="Center"/>
                <Slider Grid.Row="1" 
                       Grid.Column="1"
                       Minimum="0" 
                       Maximum="255"
                       Value="{Binding Green}"/>
                <Label Text="{Binding Green}" 
                       Grid.Row="1" 
                       Grid.Column="2" 
                       VerticalOptions="Center"/>
            <StackLayout/>

                <StackLayout>
                    <Label Text="B" 
                           Grid.Row="2" 
                           Grid.Column="0" 
                           VerticalOptions="Center"/>
            <Slider Grid.Row="2" 
                    Grid.Column="1"
                    Minimum="0" 
                    Maximum="255"
                    Value="{Binding Blue}"/>
            <Label Text="{Binding Blue}" 
                   Grid.Row="2" 
                   Grid.Column="2" 
                   VerticalOptions="Center"/>
                  <StackLayout/>
                    
            <Button Text="Pobierz"
                    Clicked="OnGetColorClicked"
                    BackgroundColor="DarkGray"
                    TextColor="White"/>

            <Entry IsReadOnly="True"
                   HorizontalOptions="Center"
                   Text="{Binding RgbText}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>